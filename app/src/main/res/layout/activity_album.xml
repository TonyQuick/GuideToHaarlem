<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_album2"
    android:theme="@style/AppTheme"
    android:background="@drawable/background_color_fade"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tonyquick.thequicklawsonguidetohaarlem.activties.AlbumActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relative_layout_appbar"
        >

        <android.support.design.widget.AppBarLayout
            android:id="@+id/app_bar_layout"
            android:minHeight="?attr/actionBarSize"
            android:background="@color/transparent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_marginTop="5dp"
            android:theme="@style/AppTheme.AppBarOverlay"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                app:layout_scrollFlags="scroll|enterAlways"

                android:weightSum="1">

                <ImageView
                    app:srcCompat="@drawable/logo"
                    android:id="@+id/imageView"
                    android:maxWidth="100dp"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp" />

            </android.support.v7.widget.Toolbar>


        </android.support.design.widget.AppBarLayout>
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/relative_layout_appbar"
        android:id="@+id/main_content_frame">

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/shade_frame"
        android:background="@color/my_black"
        android:alpha="0.0">

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:id="@+id/secondary_content_frame">

    </FrameLayout>





</RelativeLayout>
